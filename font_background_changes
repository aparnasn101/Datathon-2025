# ------------------------------
# 0) AESTHETIC STYLING
# ------------------------------
st.markdown(
    """
    <style>
      /* Main app background and text */
      .stApp { 
          background-color: #fdf6f0;  /* soft pastel cream */
          color: black;               
          font-family: Georgia, serif; 
      }

      /* Force black text and Georgia font across all components */
      html, body, [class*="css"] {
          color: black !important;
          font-family: Georgia, serif !important;
      }

      /* Headings styling */
      h1, h2, h3, h4, h5, h6 {
          color: #333333 !important;  
          font-family: Georgia, serif !important;
      }

      /* Sidebar background */
      .sidebar .sidebar-content {
          background-color: #d4f1f9;  /* pastel blue */
          color: black;
          font-family: Georgia, serif;
      }

      /* Tables styling */
      .stDataFrame table {
          background-color: #fff8f3;
          color: black;
          font-family: Georgia, serif;
      }

      /* Markdown text in app and sidebar */
      p, div, span, label {
          color: black !important;
          font-family: Georgia, serif !important;
      }

      /* Horizontal divider styling for sections */
      hr {
          border: 0;
          height: 1px;
          background-color: #cfcfcf;
          margin-top: 20px;
          margin-bottom: 20px;
      }

      /* Plotly chart background and font */
      .js-plotly-plot {
          background-color: #fdf6f0 !important;
          font-family: Georgia, serif !important;
          color: black !important;
      }

      /* Plotly axis titles and labels */
      .plotly .xtick text, .plotly .ytick text, .plotly .axis-title {
          font-family: Georgia, serif !important;
          color: black !important;
      }

      /* Optional: bar chart text */
      .plotly .bar text {
          font-family: Georgia, serif !important;
          color: black !important;
      }
    </style>
    """,
    unsafe_allow_html=True
)

